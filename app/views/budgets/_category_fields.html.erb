<div class='nested-fields add_category'>
	<div class="columns">
		<div class="column">
			<%= f.label :name, class: 'label' %>
			<%= f.text_field :name, class: 'input', id: "input_name", placeholder: "Rent, Car Payments, Phone Bill, etc."%>
		</div>
		<div class="column" id="cat_amount">
		  	<%= f.label :amount, class: 'label' %>
		  	<p class="control has-icons-left">
			  	<%= f.text_field :amount, class: 'input', id: "input_amount" %>
			  	<span class="icon is-small is-left">
			  		<i class="fa fa-dollar"></i>
			  	</span>
			</p>
		</div>

	<%= f.hidden_field :fixed, value: true, id: 'hidden_fixed' %>
	<%= f.hidden_field :order, value: 0, id: 'hidden_order' %>
	<%= f.hidden_field :percent, value: 0, id: 'hidden_percent' %>

