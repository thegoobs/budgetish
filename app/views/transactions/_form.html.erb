
<%= form_with(model: [ @budget, @budget.transactions.build ], remote: true) do |form| %>
<div class="transaction">
	<div class="field">
		<%= form.label :name, class: 'label' %>
		<div class="control">
			<%= form.text_field :name, class: 'input' %>
		</div>
	</div>

	<div class="field">
		<%= form.label :amount, class: 'label' %>
		<div class="control has-icons-left">
			<%= form.text_field :amount, class: 'input', id: 'transaction_amount', data: {sub: @subtract} %>
			<span class="icon is-small is-left">
				<i class="fa fa-usd"/>
			</span>
		</div>
	</div>

	<div class="field">
		<%= form.label :category_id, class: 'label' %>
		<%= form.select :category_id, current_user.budget.categories.collect {|c| [c.name, c.id]} %>
	</div>
	<div class="columns">
		<div class="column">
	<%= form.submit 'Add to Budget', class: 'button is-primary Add-to-category', onClick: 'transaction_check()' %>
	<% if @subtract == "false" %>
		</div>
		<div class='column'>
		<%= form.submit 'Auto Budget', class: 'button is-primary auto-budget-button', onClick: 'transaction_check()' %>
	<% end %>
		</div>
	</div>
</div>
<% end %>